<div class="widget-settings">

  <div class="_iphone_x"></div>

  <div class="_header">
    <div class="_back" on-click="back"><span class="_icon"></span> {{translate("Back")}}</div>
    <span class="_title">{{translate("Settings")}}</span>
  </div>

  <div class="_section _account">
    <div class="_list_item">
      <div class="_avatar" style-background-image="{{ avatar }}"></div>
      <div class="_label">{{translate("Your username")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
  </div>

  <div class="_section">
    <div class="_title">{{translate("Security")}}</div>
    <div class="_list_item">
      <div class="_label">{{translate("PIN & Touch ID")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
    <div class="_list_item">
      <div class="_label">{{translate("Hardware Security")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
  </div>

  <div class="_section">
    <div class="_title">{{translate("Tools")}}</div>
    {{#if isEOS}}
    <div class="_list_item" on-click="eos-setup-account">
      <div class="_label">{{translate("Setup EOS account")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
    {{/if}}
    {{#if isEnabledImport}}
    <div class="_list_item" on-click="import-private-key">
      <div class="_label">{{translate("Transfer paper wallet / private key")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
    {{/if}}
    {{#if isEnabledExport}}
    <div class="_list_item" on-click="export-private-keys">
      <div class="_label">{{translate("Export private keys")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
    {{/if}}
  </div>

  <div class="_section">
    <div class="_list_item" on-click="support">
      <div class="_label">{{translate("Support")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
    <div class="_list_item">
      <div class="_label">{{translate("About")}}</div>
      <div class="_value"><span class="_arrow_right"></span></div>
    </div>
  </div>

  <div class="_section">
    <div class="_list_item _logout" on-click="logout">{{translate("Logout")}}</div>
  </div>

</div>
