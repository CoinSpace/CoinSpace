{{#if isLoading}}
  {{>loader}}
{{else}}
<div class="moonpay_payment_methods">

  <div class="_header">
    <div class="_back" on-click="back">
      <span class="_icon"></span> {{translate("Back")}}
    </div>
  </div>

  {{#if cards.length}}
  <div class="_group">
    <label>{{translate("Credit Cards")}}</label>
    {{#each cards}}
      {{#if this.type === 'applePay'}}
        <div class="_input">{{label}}</div>
      {{else}}
        <div class="_input">{{label}}
          <div class="close__input" on-click="deleteCard(this)">
            <span class="_icon">{{> svg_close}}</span>
          </div>
        </div>
      {{/if}}
    {{/each}}
  </div>
  {{else}}
    <div class="_message">
      {{translate("No credit cards.")}}
    </div>
  {{/if}}

  <div class="_confirm_btn_group">
    <div on-click="add-credit-card" class="_btn">
      {{translate("Add Credit Card")}}
    </div>
  </div>

  <div class="_separator"></div>

  {{#if bankAccounts.length}}
  <div class="_group">
    <label>{{translate("Bank Accounts")}}</label>
    {{#each bankAccounts}}
      <div class="_input">{{label}}
        <div class="close__input" on-click="deleteBankAccount(this)">
          <span class="_icon">{{> svg_close}}</span>
        </div>
      </div>
    {{/each}}
  </div>
  {{else}}
    <div class="_message">
      {{translate("No bank accounts.")}}
    </div>
  {{/if}}

  <div class="_confirm_btn_group">
    <div on-click="add-bank-account" class="_btn">
      {{translate("Add Bank Account")}}
    </div>
  </div>

</div>
{{/if}}
