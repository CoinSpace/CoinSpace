{
  "name": "coin",
  "productName": "Coin Wallet",
  "version": "1.0.0",
  "description": "Coin Digital Currency Wallet",
  "license": "GPL-2.0+",
  "author": "Coin Wallet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoinSpace/CoinSpace.git"
  },
  "main": "electron.js",
  "build": {
    "appId": "com.coinspace.wallet",
    "productName": "Coin Wallet",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "**/*",
      "resources/icon.*",
      "!env.ejs",
      "!README.md",
      "!notarize.js",
      "!**/node_modules/*/.github",
      "!**/node_modules/*/.editorconfig",
      "!**/node_modules/*/.jscs.json",
      "!**/node_modules/*/.eslintignore",
      "!**/node_modules/*/.nycrc",
      "!**/node_modules/*/.nvmrc",
      "!**/node_modules/*/.eslintrc.js",
      "!**/node_modules/*/.istanbul.yml",
      "!**/node_modules/*/Makefile",
      "!**/node_modules/*/Readme.md",
      "!**/node_modules/*/Changelog.md",
      "!**/node_modules/*/HISTORY.md"
    ],
    "win": {
      "target": [
        "nsis",
        "portable",
        "appx"
      ],
      "publisherName": "CN=Coin Space"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "mas"
      ]
    },
    "appx": {
      "identityName": "CoinWallet",
      "publisher": "CoinSpace",
      "publisherDisplayName": "Coin Digital Currency Wallet",
      "applicationId": "CoinWallet",
      "displayName": "Coin Digital Currency Wallet",
      "setBuildNumber": true
    },
    "protocols": {
      "name": "Coin Wallet",
      "schemes": [
        "coinspace"
      ]
    },
    "afterSign": "./notarize.js"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rm -rf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@sentry/electron": "^1.3.0"
  },
  "devDependencies": {
    "electron": "^8.2.4",
    "electron-builder": "^22.6.1",
    "electron-notarize": "^0.3.0"
  }
}
